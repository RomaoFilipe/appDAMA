<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Campo de texto para o nome do treinador -->
    <EditText
        android:id="@+id/editTextTrainerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Treinador" />

    <!-- Campo de texto para a data -->
    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data"
        android:inputType="date" />

    <!-- Campo de texto para a hora -->
    <EditText
        android:id="@+id/editTextTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hora"
        android:inputType="time" />

    <!-- BotÃ£o para agendar a aula -->
    <Button
        android:id="@+id/buttonSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agendar Aula" />
</LinearLayout>
